@model BaranofHoldings.Areas.Admin.Models.HomeModelAdmin

@{

}




<div class="container">
    <div class="row">






        <div class="panel panel-primary">
            <div class="panel-heading">Update Team</div>
            <div class="panel-body" style="background-color: white;">
                <div class="form-group">

                    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        @Html.HiddenFor(c=>c.Team.isDeleted)
                        @Html.HiddenFor(c => c.Team.Created)
                        @Html.HiddenFor(c => c.Team.Prefix)
                        @Html.HiddenFor(c => c.Team.MembervCard)
                        @Html.HiddenFor(c => c.Team.Suffix)
                        @Html.HiddenFor(c => c.Team.TeamMemberId)
                        @Html.HiddenFor(c => c.Team.MiddleName)
                        @Html.HiddenFor(c => c.Team.MemberOrder)
                        @Html.HiddenFor(c => c.Team.MemberLinkedIn)
                        @Html.HiddenFor(c => c.Team.MemberPhone)
                        @Html.HiddenFor(c => c.Team.MemberType)
                        @Html.HiddenFor(c => c.Team.MemberPicture)


                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>TeamMember</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Team.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Team.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Team.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Team.MiddleName, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Team.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Team.MiddleName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Team.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Team.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Team.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Team.MemberTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Team.MemberTitle, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Team.MemberTitle, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Team.MemberEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Team.MemberEmail, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Team.MemberEmail, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10  ">
                                    @if (Model.onePortfolio != null)
                                    {
                                        <img src="~/Images/@Model.onePortfolio.PortfolioLogo" />
                                    }
                                    else
                                    {
                                        <img src="~/Images/noimg_bio.jpg" />
                                    }
                                    <div>
                                        <br />
                                        @Html.LabelFor(m => m.Team.MemberPicture)
                                        @Html.TextBoxFor(m => Model.ImageUpload, new { @type = "file" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Team.MemberBriefIntro, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Team.MemberBriefIntro, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Team.MemberBriefIntro, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Team.MemberBio, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.Team.MemberBio, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })
                                    @Html.ValidationMessageFor(model => model.Team.MemberBio, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
