@model BaranofHoldings.Models.HomeModel

<!DOCTYPE html>
<html lang="en" ng-app="BaranofHoldingsApp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#00456b">
    <meta name="description" content="">
    <meta name="keywords" content="">
    
    <!-- Favicon -->
    <link rel="icon" href="~/Images/favicons/favicon.ico">
    <!-- For iPhone 6 Plus with 3× display: -->
    <link rel="apple-touch-icon-precomposed" sizes="180x180" href="~/Images/favicons/apple-touch-icon-180x180-precomposed.png">
    <!-- For iPad with 2× display running iOS ≥ 7: -->
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="~/Images/favicons/apple-touch-icon-152x152-precomposed.png">
    <!-- For iPad with 2× display running iOS ≤ 6: -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Images/favicons/apple-touch-icon-144x144-precomposed.png">
    <!-- For iPhone with 2× display running iOS ≥ 7: -->
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="~/Images/favicons/apple-touch-icon-120x120-precomposed.png">
    <!-- For iPhone with 2× display running iOS ≤ 6: -->
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Images/favicons/apple-touch-icon-114x114-precomposed.png">
    <!-- For the iPad mini and the first- and second-generation iPad (1× display) on iOS ≥ 7: -->
    <link rel="apple-touch-icon-precomposed" sizes="76x76" href="~/Images/favicons/apple-touch-icon-76x76-precomposed.png">
    <!-- For the iPad mini and the first- and second-generation iPad (1× display) on iOS ≤ 6: -->
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Images/favicons/apple-touch-icon-72x72-precomposed.png">
    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <link rel="apple-touch-icon-precomposed" href="~/Images/favicons/apple-touch-icon-precomposed.png"><!-- 57×57px -->
    <!-- For IE 10 Metro tile icon: -->
    <meta name="msapplication-TileColor" content="#FFFFFF">
    <meta name="msapplication-TileImage" content="~/Images/favicons/ms-icon-144x144.png">
    <link rel="icon" href="~/Images/favicons/favicon-32x32.png" sizes="32x32">

    <title>Baranof Holdings</title>
        @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/jasny-bootstrap.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href='https://fonts.googleapis.com/css?family=Lato:400,300,300italic,400italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
</head>
<body id="top">
    <div id="fullpage" ng-controller="mainController as mainCtrl">
        <header class="section">
            <div class="global-header-wrapper">
                <a href="~/" ng-click="gotoAnchor('top')"><img src="~/images/logo.png" title="Seven Point Equity Partners"></a>
            </div>
            <div class="site-intro-layer">
                <div class="container">
                    <div class="site-intro-headline">
                        <p> @Html.Raw(@ViewBag.HomeHeader)</p>               
                    </div>
                    <div class="pontalbe_arrow animated bounce">
                        <a id="bounce" class"site-intro-arrow" href=""><img src="~/images/arrow.png" /></a>
                    </div>
                </div>
            </div>
            <nav class="primary primary-home">
                <div class="container">
                    <div class="menu-wrapper">
                        <div class="container">
                            <ul class="BaranofHoldings-nav">
                                @*<li><a href="#heading">Home</a>|</li>*@
                                <li><a href="#approach">Investment Approach</a>|</li>
                                <li><a href="#criteria">Strategy</a>|</li>                                
                                <li><a href="#portfolio">Portfolio</a>|</li>
                                <li><a href="#team">Team</a>|</li>
                                <li><a href="#contact">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <nav class="navbar navbar-default sticky-nav not-show" ng-controller="mainController as mainCtrl">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".navbar-offcanvas" data-canvas="html">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="logo" href="" ng-click="gotoAnchor('top')"><img src="~/images/logo-small.jpg" title="Baranof Holdings"></a>
            </div>
            <div id="navbar" class="navbar-offcanvas offcanvas">
                <a class="off-navbar-brand" href="~/" ng-click="gotoAnchor('top')"><img src="~/images/logo.png" title="Baranof Holdings"></a>
                <ul class="BaranofHoldings-nav">
                    @*<li><a href="#heading">Home</a></li>*@
                    <li><a href="#approach">Investment Approach</a></li>
                    <li><a href="#criteria">Strategy</a></li>
                    <li><a href="#portfolio">Portfolio</a></li>
                    <li><a href="#team">Team</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <main class="content" role="main" id="home">
        @RenderBody()
    </main>

    <div id="modal-area" ng-cloak></div>

    <footer >
        <div class="container">
            &copy; @DateTime.Now.Year Baranof Holdings
            <!-- <a href="http://www.cleverdesign.com">Site by Cleverdesign</a> -->
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/scripts/jquery.fullPage.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="~/Scripts/ie10-viewport-bug-workaround.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/app.js"></script>
    @Scripts.Render("~/bundles/angular")

    <script type="text/javascript">

        jQuery(function () {
            jQuery('#myTab a:First').tab('show')
        })

        $("#bounce").click(function () {
            $('html, body').animate({
                scrollTop: $("#heading").offset().top
            }, 1500);
            return false;
        });


        if ($(window).width() > 768) {
            $(document).ready(function () {
                $('#fullpage').fullpage({
                    autoScrolling: false,
                    fitToSection: false
                });
            });
        }

        $stickyEl = $('.heading-section');
        $elTop = $stickyEl.offset().top;

        $(document).scroll(function () {
            if ($(window).width() > 768) {
                if ($(this).scrollTop() > $stickyEl.offset().top - 10) {
                    $('.sticky-nav').removeClass('not-show');
                };

                if ($(this).scrollTop() < $stickyEl.offset().top - 10) {
                    $('.sticky-nav').fadeIn(1000).addClass('not-show');
                };
            };

            if ($(this).scrollTop() > ($('#approach').offset().top - 103)) {
                $('#navApproach').addClass('active');
                $('#navApproach').siblings().removeClass('active');
            }
            else {
                $('#navApproach').removeClass('active');
            };

            if ($(this).scrollTop() > $('#criteria').offset().top - 103) {
                $('#navCriteria').addClass('active');
                $('#navCriteria').siblings().removeClass('active');
            };

            if ($(this).scrollTop() > $('#team').offset().top - 103) {
                $('#navTeam').addClass('active');
                $('#navTeam').siblings().removeClass('active');
            };

            if ($(this).scrollTop() > $('#portfolio').offset().top - 103) {
                $('#navPortfolio').addClass('active');
                $('#navPortfolio').siblings().removeClass('active');
            };

            if ($(this).scrollTop() + $(window).height() == $(document).height()) {
                $('#navContact').addClass('active');
                $('#navContact').siblings().removeClass('active');
            };
        });

        $('.BaranofHoldings-nav a').click(function (event) {
            var adjust = 30;
            if ($(window).width() < 768) {
                adjust = 23;
            };
            var $anchor = $(this);
            $('html, body').animate({
                scrollTop: $($anchor.attr('href')).offset().top + adjust
            }, 1000);

            event.preventDefault();

            if ($('.navbar-toggle').css('display') != 'none') {
                $('.navbar-toggle').trigger('click');
            }

            $('body').attr('style', '');
        });

        $('.off-navbar-brand').click(function () {
            if ($('.navbar-toggle').css('display') != 'none') {
                $('.navbar-toggle').trigger('click');
            }
        })
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>